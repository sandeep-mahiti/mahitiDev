<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/layout_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/twentydp"
        android:paddingRight="@dimen/twentydp"
        android:paddingTop="@dimen/twentydp"
        android:weightSum="4">

        <EditText
            android:id="@+id/edt_pulse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/tendp"
            android:layout_weight="1.05"
            android:background="@drawable/add_age_edittext"
            android:maxLength="3"
            android:inputType="number"
            android:padding="@dimen/twelve"
            android:textAlignment="center"
            android:hint="60"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_bp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/tendp"
            android:layout_weight=".85"
            android:background="@drawable/add_age_edittext"
            android:maxLength="7"
            android:padding="@dimen/twelve"
            android:textAlignment="center"
            android:hint="75/110"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_height_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/tendp"
            android:layout_weight="1.05"
            android:background="@drawable/add_age_edittext"
            android:inputType="number"
            android:maxLength="3"
            android:padding="@dimen/twelve"
            android:hint="cms"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_weight_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.05"
            android:background="@drawable/add_age_edittext"
            android:inputType="number"
            android:maxLength="2"
            android:padding="@dimen/twelve"
            android:hint="kgs"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fivedp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/twentydp"
        android:weightSum="4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.05"
            android:gravity="center"
            android:text="Pulse"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteensp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".85"
            android:gravity="center"
            android:text="BP"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteensp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.05"
            android:gravity="center"
            android:text="Height"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteensp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.05"
            android:gravity="center"
            android:text="Weight"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteensp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twentydp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:weightSum="4">

        <EditText
            android:id="@+id/edt_bmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/add_age_edittext"
            android:editable="false"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:padding="@dimen/twelve"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fivedp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="BMI"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteensp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tendp"
        android:background="@color/light_blue"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/tendp"
            android:text="OBSERVATION :"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteensp" />

        <TextView
            android:id="@+id/tv_observation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_red"
            android:textSize="@dimen/eighteensp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fivedp"
        android:orientation="horizontal"
        android:padding="@dimen/fivedp"
        android:gravity="center"
        android:weightSum="1">

        <TextView
            android:id="@+id/bio_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/tendp"
            android:gravity="right"
            android:paddingLeft="@dimen/twentydp"
            android:paddingTop="@dimen/fivedp"
            android:paddingBottom="@dimen/fivedp"
            android:paddingRight="@dimen/twentydp"
            android:background="@drawable/border_textview"
            android:text="@string/save_small"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/eighteensp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:padding="@dimen/fivedp"
            android:text="Advanced Analysis"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/eighteensp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>