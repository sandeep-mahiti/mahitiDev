<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_corners"
    android:orientation="vertical"
    android:padding="@dimen/tendp">

    <TextView
        android:id="@+id/otpSentSubText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/thirtydp"
        android:layout_marginRight="@dimen/thirtydp"
        android:layout_marginTop="@dimen/thirtydp"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="@string/otpSentSubString"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteensp" />

    <TextView
        android:id="@+id/mobile_or_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/thirtydp"
        android:layout_marginRight="@dimen/thirtydp"
        android:layout_marginTop="@dimen/tendp"
        android:gravity="center_vertical"
        android:text="amit.kumar@gmail.com"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="@dimen/sixteensp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fiftydp"
        android:layout_margin="@dimen/tendp"
        android:layout_marginTop="@dimen/tendp"
        android:background="@drawable/edit_border_color"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/updateOtpNum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/twentydp"
            android:layout_marginRight="@dimen/twentydp"
            android:background="@android:color/transparent"
            android:hint="@string/OTP_hint"
            android:inputType="number"
            android:maxLength="4"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/twentysp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tendp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/tendp"
            android:text="Dont receive OTP?"
            android:textColor="@color/gray"
            android:textSize="@dimen/sixteensp" />

        <TextView
            android:id="@+id/resendOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:maxLines="1"
            android:paddingLeft="@dimen/tendp"
            android:text="@string/resendOTP"
            android:textColor="@color/yellow"
            android:textSize="@dimen/fourteensp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/tendp"
        android:paddingTop="@dimen/tendp"
        android:text="DISMISS"
        android:textColor="@color/gray"
        android:textSize="@dimen/twentysp"
        android:textStyle="bold" />

</LinearLayout>

