<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/tendp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tendp"
        android:text="@string/type_of_reminder"
        android:textColor="@color/black"
        android:textSize="@dimen/eighteensp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/ll_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fivedp"
            android:layout_marginTop="@dimen/tendp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_school"
                android:layout_width="@dimen/fiftydp"
                android:layout_height="@dimen/seventy"
                android:layout_gravity="center"
                android:src="@drawable/tupeofreminder" />

            <TextView
                android:id="@+id/tv_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/fivedp"
                android:text="School"
                android:textSize="@dimen/twelvesp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_vaccination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tendp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_vaccination"
                android:layout_width="@dimen/fiftydp"
                android:layout_height="@dimen/seventy"
                android:layout_gravity="center"
                android:src="@drawable/tupeofreminder_selected" />

            <TextView
                android:id="@+id/tv_vaccination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/fivedp"
                android:singleLine="true"
                android:text="@string/Vaccination"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/twelvesp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fivedp"
            android:layout_marginTop="@dimen/tendp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_friends"
                android:layout_width="@dimen/fiftydp"
                android:layout_height="@dimen/seventy"
                android:layout_gravity="center"
                android:src="@drawable/tupeofreminder" />

            <TextView
                android:id="@+id/tv_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/fivedp"
                android:text="Friends"
                android:textSize="@dimen/twelvesp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tendp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_family"
                android:layout_width="@dimen/fiftydp"
                android:layout_height="@dimen/seventy"
                android:layout_gravity="center"
                android:src="@drawable/tupeofreminder" />

            <TextView
                android:id="@+id/tv_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/fivedp"
                android:text="Family"
                android:textSize="@dimen/twelvesp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fivedp"
            android:layout_marginTop="@dimen/tendp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_other"
                android:layout_width="@dimen/fiftydp"
                android:layout_height="@dimen/seventy"
                android:layout_gravity="center"
                android:src="@drawable/tupeofreminder" />

            <TextView
                android:id="@+id/tv_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/fivedp"
                android:text="Other"
                android:textSize="@dimen/twelvesp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/tendp"
        android:layout_marginTop="@dimen/tendp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:id="@+id/ll_vaccination_dromdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".9"
            android:text="@string/Vaccine"
            android:textSize="@dimen/eighteensp" />

        <EditText
            android:id="@+id/sp_vaccine_names"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/tendp"
            android:layout_weight="1.15"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/downarrow"
            android:editable="false"
            android:focusable="false"
            android:inputType="textCapSentences"
            android:paddingBottom="@dimen/fivedp"
            android:paddingLeft="@dimen/tendp"
            android:paddingTop="@dimen/fivedp"
            android:text="BCG" />

        <ImageView
            android:id="@+id/reminderHelpText"
            android:layout_width="@dimen/twentydp"
            android:layout_height="@dimen/thirtydp"
            android:layout_gravity="center"
            android:src="@drawable/question_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_vaccination_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_select_type_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".85"
            android:text="SCHOOL" />

        <Spinner
            android:id="@+id/sp_eventTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fivedp"
            android:layout_weight="1.15"

            />

        <ImageView
            android:layout_width="@dimen/twentydp"
            android:layout_height="@dimen/thirtydp"
            android:layout_gravity="center"
            android:src="@drawable/question_icon"
            android:visibility="invisible" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transperent_edt_bg"
        android:hint="Reminder.."
        android:inputType="text"
        android:padding="@dimen/tendp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/tendp"
        android:layout_marginTop="@dimen/tendp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/date"
            android:textSize="@dimen/eighteensp" />


        <EditText
            android:id="@+id/reminder_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/calendargray"
            android:drawablePadding="10dp"
            android:editable="false"
            android:focusable="false"
            android:gravity="left|center_vertical"
            android:hint="DD-MM-YYYY"
            android:paddingBottom="@dimen/fivedp"
            android:paddingTop="@dimen/fivedp"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/tendp"
        android:layout_marginTop="@dimen/tendp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/time"
            android:textSize="@dimen/eighteensp" />


        <EditText
            android:id="@+id/reminder_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/timegray"
            android:drawablePadding="10dp"
            android:editable="false"
            android:focusable="false"
            android:gravity="left|center_vertical"
            android:hint="HH:MM pm"
            android:paddingBottom="@dimen/fivedp"
            android:paddingTop="@dimen/fivedp"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/tendp"
        android:layout_marginTop="@dimen/tendp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/place"
            android:textSize="@dimen/eighteensp" />


        <EditText
            android:id="@+id/eventLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/locationgray"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:text="Bangalore"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/tendp"
        android:layout_marginTop="@dimen/tendp"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/reminderSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/twentydp"
        android:padding="@dimen/tendp"
        android:text="@string/save"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/twentysp"
        android:textStyle="bold" />
</LinearLayout>