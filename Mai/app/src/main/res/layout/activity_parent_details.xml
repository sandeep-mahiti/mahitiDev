<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ph_bg"
    android:orientation="vertical"
    tools:context="com.parentof.mai.views.activity.ParentDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:gravity="center"
            android:layout_marginTop="@dimen/twentydp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mai_logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_marginTop="@dimen/twentydp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcome_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/welcome_amit"
                android:textColor="@color/white"
                android:textSize="@dimen/twentyFivesp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="@string/please_enter_details"
                android:textColor="@color/lite_grey"
                android:textSize="@dimen/eighteensp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fiftydp"
                android:layout_margin="@dimen/twentydp"
                android:background="@drawable/border2"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/fName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/twentydp"
                    android:layout_marginRight="@dimen/twentydp"
                    android:background="@android:color/transparent"
                    android:hint="@string/first_name_hint"
                    android:inputType="text|textCapSentences"

                    android:textColor="@color/black"
                    android:textSize="@dimen/twentysp" />

                <requestFocus />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fiftydp"
                android:layout_marginBottom="@dimen/twentydp"
                android:layout_marginLeft="@dimen/twentydp"
                android:layout_marginRight="@dimen/twentydp"
                android:background="@drawable/border2"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/lName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/twentydp"
                    android:layout_marginRight="@dimen/twentydp"
                    android:background="@android:color/transparent"
                    android:hint="@string/last_name_hint"
                    android:inputType="text|textCapSentences"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/twentysp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fiftydp"
                android:layout_marginBottom="@dimen/tendp"
                android:layout_marginLeft="@dimen/twentydp"
                android:layout_marginRight="@dimen/twentydp"
                android:background="@drawable/border2"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/eMail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/twentydp"
                    android:layout_marginRight="@dimen/twentydp"
                    android:background="@android:color/transparent"
                    android:hint="@string/email_hint"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/twentysp" />


            </LinearLayout>

            <TextView
                android:id="@+id/emailErrorString"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fourtydp"
                android:text="@string/error_email"
                android:textColor="@color/error_email"
                android:visibility="invisible"
                 />

            <TextView
                android:id="@+id/beginTextBtn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/twentydp"
                android:background="@drawable/begin_border"
                android:gravity="center"
                android:paddingBottom="@dimen/tendp"
                android:paddingTop="@dimen/tendp"
                android:text="@string/amDone"
                android:textColor="@color/begin"
                android:textSize="@dimen/eighteensp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/fiftydp"
            android:layout_weight="1.25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/new_image" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
