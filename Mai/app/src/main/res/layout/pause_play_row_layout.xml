<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/tendp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/improvement_plan_blok"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/taskName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/tendp"
                android:text="TASK 1"
                android:textColor="@color/white"
                android:textSize="@dimen/sixteensp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/fivedp"
                android:paddingTop="@dimen/fivedp"
                android:id="@+id/pausePlayIV"
                android:src="@drawable/pausebutton100" />
        </RelativeLayout>

        <TextView
            android:id="@+id/dpName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/tendp"
            android:text="Exam Confidence"
            android:textSize="@dimen/sixteensp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dpDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fivedp"
            android:paddingLeft="@dimen/tendp"
            android:text="Call your Child and say 'Hello' "
            android:textColor="@color/white"
            android:textSize="@dimen/sixteensp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/black"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_pauseDays"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/twentydp"
                android:layout_marginTop="@dimen/tendp"
                android:paddingBottom="@dimen/fivedp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
