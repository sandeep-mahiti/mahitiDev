<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_corners"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/twentydp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tendp"
        android:id="@+id/topTextTV"
        android:text="@string/your_ans"
        android:textColor="@color/black"
        style="@style/MyStyle"
        android:textSize="@dimen/twentysp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/twentydp"
        android:layout_marginTop="@dimen/tendp"
        android:src="@drawable/lock_user" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_account"
        android:textColor="@color/email_text_error"
        style="@style/MyStyle"
        android:textSize="@dimen/twentysp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fivedp"
        android:layout_marginTop="@dimen/fivedp"
        android:text="@string/please_get"
        android:textAlignment="center"
        android:textColor="@color/grey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/twentydp"
        android:text="support@talktomai.com"
        android:textAlignment="center"
        style="@style/MyStyle"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="OK"
        android:paddingTop="@dimen/fivedp"
        android:paddingLeft="@dimen/tendp"
        android:paddingRight="@dimen/tendp"
        android:textColor="@color/colorPrimaryDark"
        android:clickable="true"
        android:textSize="@dimen/twentysp"
        style="@style/MyStyle"
        android:id="@+id/popUpDone" />
</LinearLayout>
