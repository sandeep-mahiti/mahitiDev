<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/listV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tendp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:id="@+id/skillsIcon"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/tendp"
                android:layout_weight="10"
                android:src="@drawable/verbal_communication_selected" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:paddingTop="@dimen/tendp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verbal Communication"
                    android:id="@+id/open_skillTV"
                    android:textSize="@dimen/sixteensp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fivedp"
                    android:layout_marginTop="@dimen/fivedp"
                    android:id="@+id/openSkills_questionsTV"
                    android:text="@string/qstnsLeft"
                    android:textColor="#27a5d6"
                    android:textSize="@dimen/tensp"
                    android:textStyle="italic" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="19">

                <ProgressBar
                    android:id="@+id/circProgrssbar"
                    android:layout_centerInParent="true"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:max="100"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/circular_reports_progress"

                    />

                <TextView
                    android:id="@+id/progressTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/tendp"
            android:weightSum="1">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.35"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/twentyfivedp"
                android:background="@drawable/message_bg"
                android:gravity="center"
                android:paddingTop="@dimen/fivedp"
                android:clickable="true"
                android:id="@+id/talktoMaiTV"
                android:text="Talk to Mai"
                android:textSize="@dimen/sixteensp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/improveNowTVBtn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="0.35"
                android:layout_marginTop="3dp"
                android:background="@drawable/chatbtnselected"
                android:gravity="center"
                android:padding="@dimen/fivedp"
                android:clickable="true"
                android:text="Improve now"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

    </LinearLayout>



</LinearLayout>