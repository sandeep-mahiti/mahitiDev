<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twentyFivedp"
                android:padding="@dimen/fourteensp"
                android:text="@string/hair"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteensp" />

            <Spinner
                android:id="@+id/dd_hair"
                android:layout_width="@dimen/hunderd"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/thirtydp"
                android:entries="@array/hair_array"
                android:padding="@dimen/fivedp" />

            <TextView
                android:id="@+id/tv_dd_hair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/fourtydp"
                android:text="@string/normal"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteensp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twentyFivedp"
                android:padding="@dimen/fourteensp"
                android:text="@string/skin"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteensp" />

            <Spinner
                android:id="@+id/dd_skin"
                android:layout_width="@dimen/hunderd"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/thirtydp"
                android:entries="@array/skin_array"
                android:padding="@dimen/fivedp" />

            <TextView
                android:id="@+id/tv_dd_skin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/fourtydp"
                android:text="@string/normal"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteensp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twentyFivedp"
                android:padding="@dimen/fourteensp"
                android:text="@string/nail"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteensp" />

            <Spinner
                android:id="@+id/dd_nail"
                android:layout_width="@dimen/hunderd"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/thirtydp"
                android:entries="@array/nail_array"
                android:padding="@dimen/fivedp" />

            <TextView
                android:id="@+id/tv_dd_nail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/fourtydp"
                android:text="@string/normal"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteensp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twentyFivedp"
                android:padding="@dimen/fourteensp"
                android:text="@string/nose"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteensp" />

            <Spinner
                android:id="@+id/dd_nose"
                android:layout_width="@dimen/hunderd"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/thirtydp"
                android:entries="@array/nose_array"
                android:padding="@dimen/fivedp" />

            <TextView
                android:id="@+id/tv_dd_nose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/fourtydp"
                android:text="@string/normal"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteensp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twentyFivedp"
                android:padding="@dimen/fourteensp"
                android:text="@string/ear"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteensp" />

            <Spinner
                android:id="@+id/dd_ear"
                android:layout_width="@dimen/hunderd"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/thirtydp"
                android:entries="@array/ear_array"
                android:padding="@dimen/fivedp" />

            <TextView
                android:id="@+id/tv_dd_ear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/fourtydp"
                android:text="@string/normal"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteensp"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/dd_pure_tone"
                android:layout_width="@dimen/hunderd"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/thirtydp"
                android:entries="@array/tone_array"
                android:padding="@dimen/fivedp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/twentyFivedp"
                android:padding="@dimen/fourteensp"
                android:text="@string/pure_tone"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteensp" />

            <TextView
                android:id="@+id/tv_dd_pure_tone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/fourtydp"
                android:text="@string/normal"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteensp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twentyFivedp"
                android:padding="@dimen/fourteensp"
                android:text="@string/throat"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteensp" />

            <Spinner
                android:id="@+id/dd_throat"
                android:layout_width="@dimen/hunderd"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/thirtydp"
                android:entries="@array/throat_array"
                android:padding="@dimen/fivedp" />

            <TextView
                android:id="@+id/tv_dd_throat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/fourtydp"
                android:text="@string/normal"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteensp"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fivedp"
        android:orientation="horizontal"
        android:padding="@dimen/fivedp"
        android:gravity="center"
        android:weightSum="1">

        <TextView
            android:id="@+id/condition_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/tendp"
            android:paddingLeft="@dimen/twentydp"
            android:paddingTop="@dimen/fivedp"
            android:paddingBottom="@dimen/fivedp"
            android:paddingRight="@dimen/twentydp"
            android:background="@drawable/border_textview"
            android:text="@string/save_small"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/eighteensp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:padding="@dimen/fivedp"
            android:text="@string/advanced_analysis"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/eighteensp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
