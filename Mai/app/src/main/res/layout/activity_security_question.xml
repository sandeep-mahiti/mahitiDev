<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/twentydp"
    android:fillViewport="true"
    android:paddingBottom="@dimen/twentydp"
    android:background="@drawable/qns_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mai_logo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/welcome"
                    android:layout_marginBottom="@dimen/tendp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/twentyFivesp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/thirtydp"
                    android:layout_marginRight="@dimen/thirtydp"
                    android:text="@string/please_ans"
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/tendp"
                    android:textColor="@color/light_white"
                    android:textSize="@dimen/eighteensp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/tendp"
                    android:layout_marginTop="@dimen/twentydp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_weight="1.05"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/qns_numbers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".9"
                        android:gravity="center"
                        android:text="@string/security_qn1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/security_qn_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_weight="1.05"
                        android:background="@color/white" />

                </LinearLayout>

                <TextView
                    android:id="@+id/qns_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" "
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteensp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fiftydp"
                    android:layout_margin="@dimen/twentydp"
                    android:background="@drawable/border2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/enter_qn_ans_edt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/twentydp"
                        android:layout_marginRight="@dimen/twentydp"
                        android:background="@android:color/transparent"
                        android:focusableInTouchMode="true"
                        android:hint="@string/enter_dob_hint"
                        android:inputType="text"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/twentysp" />

                    <requestFocus />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/fivedp">

                    <TextView
                        android:id="@+id/answer_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/error_dob"
                        android:padding="@dimen/fivedp"
                        android:text="@string/error_qn"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fourteensp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NextBtn"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/fivedp"
                    android:background="@drawable/begin_border"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/tendp"
                    android:paddingTop="@dimen/tendp"
                    android:text="@string/next"
                    android:textColor="@color/next_color"
                    android:textSize="@dimen/eighteensp" />

                <TextView
                    android:id="@+id/notAble_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/twentydp"
                    android:text="@string/not_able"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteensp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/changeQn_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/tendp"
                    android:clickable="true"
                    android:text="@string/change_qn"
                    android:textAlignment="center"
                    android:textColor="@color/textblue"
                    android:textSize="@dimen/sixteensp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


</ScrollView>
