<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/settings_bg"
    tools:context=".views.activity.growthCharts.GrowthChartOptionActivity">

    <include layout="@layout/mai_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:weightSum="3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tendp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/height" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/heading1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fiftydp"
                    android:text="Height"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eighteensp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weight" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fiftydp"
                    android:text="Weight"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eighteensp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tendp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_circumfarence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/head" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fiftydp"
                    android:text="Head\nCircumference"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eighteensp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>